<!DOCTYPE>
<html lang="en">
  <head>
    <title>OnTime - A visualization of flight times in the US</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-combined.min.css" rel="stylesheet" media="screen">
  </head>

  <body>
    <section id="api">
      <ul>
        <li><a href="/flights?limit=10">/flights?limit=10</a></li>
      </ul>
    </section>

    <section id="viz">

    </section>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js" type="text/javascript"></script>
    <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/js/d3.v3.min.js" type="text/javascript"></script>
    <script type="text/javascript">
      var flights;

      $(function() {
        d3.json('/flights?limit=500', function(json) {
          flights = json;

          d3.select('#viz')
            .selectAll('p')
            .data(json)
            .enter()
            .append('p')
            .text(function(d) { return d.ActualElapsedTime })
            .style('color', function(d) {
              if (d.ActualElapsedTime > 360) {
                return 'red'
              } else {
                return 'blue'
              }
            });
        });
      });
    </script>
  </body>
</html>
